{
  "name": "wix-rich-content-editor-common",
  "version": "8.1.4",
  "author": {
    "name": "Matan Harsat",
    "email": "matanha@wix.com"
  },
  "repository": {
    "type": "git",
    "url": "git+https://github.com/wix-incubator/rich-content.git"
  },
  "license": "ISC",
  "bugs": {
    "url": "https://github.com/wix-incubator/rich-content/issues"
  },
  "homepage": "https://github.com/wix-incubator/rich-content/tree/master/rich-content-editor-common",
  "files": [
    "dist"
  ],
  "main": "dist/module.cjs.js",
  "types": "dist/src/index.d.ts",
  "module": "dist/module.js",
  "style": "dist/styles.min.css",
  "scripts": {
    "clean": "rm -rf dist/",
    "prebuild": "npm run clean",
    "build:rollup": "rollup --environment MODULE_NAME:editor-common -c ../../../rollup.config.js",
    "build": "npm run build:rollup && node ../../../scripts/cssFix.js",
    "build:dev": "cross-env NODE_ENV=development npm run build",
    "build:analyze:editor": "npm run build -- --environment MODULE_ANALYZE_EDITOR  && open stats.html",
    "build:analyze:viewer": "npm run build -- --environment MODULE_ANALYZE_VIEWER && open stats.html",
    "watch": "cross-env NODE_ENV=development MODULE_WATCH=1 npm run build:rollup -- --watch.chokidar",
    "lint": "eslint 'src/**/*.{js,jsx,ts,tsx,d.ts}'",
    "test": "jest --verbose"
  },
  "dependencies": {
    "@types/draft-js": "^0.10.41",
    "@wix/draft-js": "0.0.10",
    "downshift": "3.2.12",
    "focus-trap": "~2.4.6",
    "react-window": "~1.5.0",
    "wix-rich-content-common": "8.1.4"
  },
  "unpkg": true,
  "publishConfig": {
    "registry": "https://registry.npmjs.org/"
  },
  "jest": {
    "globals": {
      "NODE_ENV": "test"
    },
    "testMatch": [
      "**/?(*.)+(spec|test).+(ts|tsx|js)"
    ],
    "transform": {
      "^.+\\.(ts|tsx)?$": "ts-jest",
      "^.+\\.jsx?$": "<rootDir>/../../../babel.jest.monorepo.js"
    },
    "moduleNameMapper": {
      "\\.(jpg|jpeg|png|gif|svg)$": "<rootDir>/__mocks__/fileMock.js",
      "\\.(css|scss)$": "<rootDir>/__mocks__/styleMock.js"
    }
  }
}
